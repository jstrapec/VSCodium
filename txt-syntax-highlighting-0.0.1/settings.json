{
    "editor.fontSize": 16,
    "workbench.tips.enabled": false,
    "workbench.startupEditor": "none",
    "workbench.editor.enablePreview": true,
    "breadcrumbs.enabled": false,    
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.minimap.enabled": false,
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "files.defaultLanguage": "txt",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "markup.heading",
                "settings": {
                    "foreground": "#FFA500",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "markup.list",
                "settings": {
                    "foreground": "#dd6edd",
                    "fontStyle": ""
                }
            },
            {
                "scope": "markup.warning",
                "settings": {
                    "foreground": "#FF0000",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "keyword",
                "settings": {
                    "foreground": "#00AAFF",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "markup.error",
                "settings": {
                    "foreground": "#FF0000",
                    "fontStyle": ""
                }
            },
            {
                "scope": "markup.success",
                "settings": {
                    "foreground": "#00CC00",
                    "fontStyle": ""
                }
            },
            {
                "scope": "markup.shells.custom",
                "settings": {
                    "foreground": "#CE9178",
                    "fontStyle": ""
                }
            },
            {
                "scope": "markup.underline.section.note",
                "settings": {
                    "foreground": "#FFB347",
                    "fontStyle": ""
                }
            },
            {
                "scope": "markup.underline.url.custom",
                "settings": {
                    "foreground": "#3d6beb",
                    "fontStyle": "underline"
                }
            },
            {
                "scope": "markup.path.custom",
                "settings": {
                    "foreground": "#6084e7",
                    "fontStyle": ""
                }
            }              
        ]
    },
}
